<% if @ads.empty? %>
  <h3>Nenhum anúncio cadastrado</h3>
<% else %>
  <% @ads.each do |ad| %>
    <% if current_user.company_name == ad.user.company_name %>
      <div><%= link_to ad.name, ad %></div>
    <% end %>
  <% end %>
<% end %>

<%= form_with url: search_ads_path, method: :get, local: true do |f| %>
    <%= f.label :q, 'Busca de anúncios' %>
    <%= f.text_field :q %>
    <%= f.submit 'Buscar' %>
<% end %>