<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmação para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(deixe em branco se não quiser alterá-la)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres no mínimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(Precisamos de sua senha para completar as atualizações)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :company_name, 'Empresa' %><br />
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :full_name, 'Nome Completo' %><br />
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label :social_name, 'Nome Social' %><br />
    <%= f.text_field :social_name %>
  </div>

  <div class="field">
    <%= f.label :birth_date, 'Data de Nascimento' %><br />
    <%= f.date_field :birth_date %>
  </div>

  <div class="field">
    <%= f.label :occupation, 'Cargo' %><br />
    <%= f.text_field :occupation %>
  </div>

  <div class="field">
    <%= f.label :department, 'Setor' %><br />
    <%= f.text_field :department %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
